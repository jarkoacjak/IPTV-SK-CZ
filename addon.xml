<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.mojafreetv" name="Moja Free TV CZ/SK" version="1.0.0" provider-name="Jarko">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
        <import addon="script.module.inputstream.adaptive" version="2.6.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="sk">Sledovanie free TV kanálov z CZ a SK.</summary>
        <description lang="sk">Tento add-on poskytuje prístup k voľne šíriteľným televíznym staniciam z Česka a Slovenska priamo v Kodi.</description>
        <disclaimer lang="sk">Autor nenesie zodpovednosť za dostupnosť streamov. Všetok obsah je čerpaný z verejne dostupných zdrojov.</disclaimer>
        <language>sk cz</language>
        <platform>all</platform>
        <license>GNU GPL v3</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
